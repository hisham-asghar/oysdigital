@model IEnumerable<Generics.DataModels.AdminModels.ProjectMemberTypes>
@{
    ViewData["Title"] = "Project Members Type";
    Layout = "_TableLayout";
    ViewBag.AddNewLink = "/ProjectMemberTypes/Create";
}

<table class="table table-bordered table-striped table-hover js-basic-example dataTable">
    @CHtmlHelper.TableHead("th", "Name", "Created", "Status", "Actions")
    @CHtmlHelper.TableFoot("th", "Name", "Created", "Status", "Actions")
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.OnCreated.ToString("MMM dd, yyyy")</td>
                <td>@item.IsActive.CheckTag()</td>
                <td>
                    @ButtonHelper.EditSmall("/ProjectMemberTypes/Edit/" + item.Id)
                    @ButtonHelper.DeleteSmall("/ProjectMemberTypes/Delete/" + item.Id)
                    @ButtonHelper.DetailSmall("/ProjectMemberTypes/Detail/" + item.Id)
                </td>
            </tr>
        }
    </tbody>
</table>




