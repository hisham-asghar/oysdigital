@model Generics.DataModels.AdminModels.Platforms
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Input -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">Platform Detail</h2>
                    <form method="post" enctype="multipart/form-data" asp-controller="Platform" asp-action="Create">
                        <input type="hidden" name="PlatformId" value="@Model.PlatformId" />
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <label for="email_address">Name</label>
                                <div class="form-group">
                                    <input type="text" name="Name" class="form-control" placeholder="Name" value="@Model.Name" />
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <label for="email_address">Icon</label>
                                <div class="form-group">
                                    <input type="file" name="file" class="form-control" value="@Model.IconUrl" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="checkbox">
                                    <input id="remember_me" name="IsActive" type="checkbox" value="@Model.IsActive">
                                    <label for="remember_me">
                                        Is Active
                                    </label>
                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">Add</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
