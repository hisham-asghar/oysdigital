@model Generics.DataModels.AdminModels.Platforms

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                <h1>Detail</h1>

                <div>
                    <h4>Mobile</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PlatformId)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PlatformId)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PlatformName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PlatformName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IsActive)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreatedBy)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ModifiedBy)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ModifiedBy)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OnCreated)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OnCreated)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OnModified)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OnModified)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IconUrl)
                        </dt>
                        <dd class="col-sm-10">
                        <dd class="col-sm-10">
                            <img src="~/uploads/@Model.IconUrl"
                                 class="img-rounded" alt="Responsive Image"
                                 width="307" height="240" />
                        </dd>
                        </dd>
                    </dl>
                </div>
                <div>
                    @Html.ActionLink("Edit", "Create", new { id = Model.PlatformId }, new { @class = "btn btn-raised btn-warning btn-round waves-effect" }) |
                    <a asp-action="Index" class="btn btn-raised btn-primary btn-round waves-effect">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>