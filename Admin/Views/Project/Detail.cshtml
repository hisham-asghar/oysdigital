@model Generics.DataModels.AdminModels.Project
@{
    ViewData["Title"] = "Detail";
    Layout = "_DetailLayout";
}
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Project Detail</h2>
            </div>
        </div>
    </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-xl-4 col-lg-12 col-md-12">
                    <div class="card mcard_3 shadow p-3 mb-5 bg-white rounded">
                        <div class="body">
                            <a href="profile.html"><img src="/images/profile_av.jpg" class="rounded-circle" alt="profile-image"></a>
                            <h4 class="m-t-10">@Model.Name</h4>
                            <h5 class="m-t-10">@Model.OnModified.ToString(MMMM_dd_yyyy)</h5>
                            <div class="row">
                                <div class="col-12 mb-4">
                                    <ul class="social-links list-unstyled">
                                        <li><a href="https://www.facebook.com/thememakkerteam" title="facebook"><i class="zmdi zmdi-facebook-box"></i></a></li>
                                        <li><a href="https://twitter.com/thememakker" title="twitter"><i class="zmdi zmdi-twitter-box"></i></a></li>
                                        <li><a href="https://www.instagram.com/thememakker/" title="instagram"><i class="zmdi zmdi-instagram"></i></a></li>
                                    </ul>
                                </div>
                                <div class="col-4">
                                    <small>Experience</small>
                                    <h5>6+ Year</h5>
                                </div>
                                <div class="col-4">
                                    <small>Hourly Rate</small>
                                    <h5>18$</h5>
                                </div>
                                <div class="col-4">
                                    <small>Team</small>
                                    <h5>25+</h5>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-xl-8 col-lg-12 col-md-12">
                    <div class="row clearfix">
                        <div class="col-md-12 col-sm-12">
                            <div class="card shadow p-3 mb-5 bg-white rounded">
                                <div class="header">
                                    <h2><strong>Platforms</strong></h2>
                                    <div class="pull-right">
                                        @ButtonHelper.Create($"/ProjectPlatform/Create?projectId={Model.Id}&returnUrl=/Project/Detail/{Model.Id}")
                                    </div>
                                </div>
                                <div class="responsive">
                                    <table class="table table-hover c_table">
                                        <thead>
                                            <tr>
                                                <th>Media</th>
                                                <th>Posts</th>
                                                <th>Stories</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.ProjectPlatforms)
                                            {
                                            <tr>
                                                <td>
                                                    <div class="hover-zoom-effect social-widget @item.PlatformName-widget">
                                                        <div class="icon"><i class="@item.PlatformIcon"></i></div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <ul class="social-links list-unstyled">
                                                        <li><span class="list-name">@ProjectPlatformHelper.GetPostName(item.PostPerDay, item.PostPerWeek, item.PostPerMonth)</span></li>
                                                        <li><span class="text-muted">@ProjectPlatformHelper.GetPostCount(item.PostPerDay, item.PostPerMonth, item.PostPerWeek)</span></li>
                                                        <li><span class="text-muted">@item.PostSchedulingTime.ToString(hh_mm_tt)</span></li>
                                                    </ul>
                                                </td>
                                                <td>
                                                    <ul class="social-links list-unstyled">
                                                        <li><span class="list-name">@ProjectPlatformHelper.GetStoriesName(item.StoriesPerDay, item.StoriesPerWeek, item.StoriesPerMonth)</span></li>
                                                        <li><span class="text-muted">@ProjectPlatformHelper.GetPostCount(item.StoriesPerDay, item.StoriesPerWeek, item.StoriesPerMonth)</span></li>
                                                        <li><span class="text-muted">@item.StoriesSchedulingTime.ToString(hh_mm_tt)</span></li>
                                                    </ul>
                                                </td>
                                                <td>
                                                    @if (item.IsActive)
                                                    {
                                                        <span class="badge badge-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-danger">In Active</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a role="button" class="boxs-close"><i class="zmdi zmdi-edit"></i></a>
                                                    <a role="button" class="boxs-close"><i class="zmdi zmdi-delete"></i></a>
                                                </td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card shadow p-3 mb-5 bg-white rounded">
                                <div class="header">
                                    <h2><strong>Members</strong></h2>
                                    <div class="pull-right">
                                        @ButtonHelper.Create($"/ProjectMembers/Create?projectId={Model.Id}&returnUrl=/Project/Detail/{Model.Id}")
                                    </div>
                                </div>
                                <div class="responsive">
                                    <table class="table table-hover c_table">
                                        <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>Name</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.ProjectMembers)
                                            {
                                                <tr>
                                                    <td>
                                                        <div style="width:50px;height:auto" class="img img-rounded">
                                                            <img src="/images/profile_av.jpg" class="img-fluid" alt="">
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <ul class="social-links list-unstyled">
                                                            <li><span>@item.MemberName</span></li>
                                                            <li><span class="text-muted">@item.MemberType</span></li>
                                                        </ul>
                                                    </td>
                                                    <td>
                                                        @if (item.IsActive)
                                                        {
                                                            <span class="badge badge-success">Active</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger">In Active</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a role="button" class="boxs-close"><i class="zmdi zmdi-edit"></i></a>
                                                        <a role="button" class="boxs-close"><i class="zmdi zmdi-delete"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-lg-12 col-md-12">
                    <div class="row clearfix">
                        <div class="col-md-6 col-sm-12">
                            <div class="card shadow p-3 mb-5 bg-white rounded">
                                <div class="header">
                                    <h2><strong>Alert Messages</strong></h2>
                                    <div class="pull-right">
                                        @ButtonHelper.Create($"/ProjectAlertMessage/Create?projectId={Model.Id}&returnUrl=/Project/Detail/{Model.Id}")
                                    </div>
                                </div>
                                <div class="responsive">
                                    <table class="table c_table inbox_table">
                                        @foreach (var item in Model.ProjectAlertMessages)
                                        {
                                        <tr>
                                            <td class="max_ellipsis">
                                                <div class="responsive">
                                                    <span class="badge badge-primary mr-2">@LabelType.CheckProjectMessageType(item.LabelTypeId)</span>
                                                    @item.Message
                                                </div>
                                            </td>
                                            <td class="time">@item.OnCreated.ToString(MMMM_dd)</td>
                                        </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            
                            <div class="card shadow p-3 mb-5 bg-white rounded">
                                <div class="header">
                                    <h2><strong>Notes</strong></h2>
                                    <div class="pull-right">
                                        @ButtonHelper.Create($"/ProjectNotes/Create?projectId={Model.Id}&returnUrl=/Project/Detail/{Model.Id}")
                                    </div>
                                </div>
                                <div class="responsive">
                                    <table class="table c_table inbox_table">
                                        @foreach (var item in Model.ProjectNotes)
                                        {
                                            <tr>
                                                <td class="max_ellipsis">
                                                    <div class="responsive">
                                                        <span class="badge badge-primary mr-2">@LabelType.CheckProjectMessageType(item.LabelTypeId)</span>
                                                        @item.Message
                                                    </div>
                                                </td>
                                                <td class="time">@item.OnCreated.ToString(MMMM_dd)</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                        
                        </div>
                    </div>
                    </div>
                </div>
            </div>