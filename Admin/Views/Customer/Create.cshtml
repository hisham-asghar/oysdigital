@model Generics.DataModels.AdminModels.Customer
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Input -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">Customer Detail</h2>
                    <form method="post" name="Customer_form" enctype="multipart/form-data" asp-controller="Customer" asp-action="Create">
                        <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <label for="email_address">Name</label>
                                <div class="form-group">
                                    <input type="text" name="CustomerName" class="form-control" placeholder="Name" value="@Model.CustomerName" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="email_address">Email</label>
                                <div class="form-group">
                                    <input type="email" name="Email" class="form-control" placeholder="Email" value="@Model.Email" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="email_address">Address</label>
                                <div class="form-group">
                                    <input type="text" name="Address" id="email_address" class="form-control" placeholder="Address" value="@Model.Address">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="password">Phone Number</label>
                                <div class="form-group">
                                    <input type="text" name="PhoneNumber" id="password" class="form-control" placeholder="Phone Number" value="@Model.PhoneNumber">
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                    </label>
                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">Add</button>
                        <a asp-action="Index" class="btn btn-raised btn-primary btn-round waves-effect">Back to List</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}