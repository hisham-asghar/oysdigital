@model Generics.DataModels.AdminModels.Customer
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid">
        <!-- Input -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="body">
                        <h2 class="card-inside-title">Customer Detail</h2>
                        <form method="post" enctype="multipart/form-data" asp-controller="Customer" asp-action="Create">
                            <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
                            @*<input type="hidden" name="CreatedBy" value="@Model.CreatedBy" />
                            <input type="hidden" name="Guid" value="@Model.Guid" />
                            <input type="hidden" name="OnCreated" value="@Model.OnCreated" />*@
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <label for="email_address">Name</label>
                                    <div class="form-group">
                                        <input type="text" name="Name" class="form-control" placeholder="Name" value="@Model.Name" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label for="email_address">Email</label>
                                    <div class="form-group">
                                        <input type="email" name="Email" class="form-control" placeholder="Email" value="@Model.Email" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label for="email_address">Address</label>
                                    <div class="form-group">
                                        <input type="text" name="Address" id="email_address" class="form-control" placeholder="Address" value="@Model.Address">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label for="password">Phone Number</label>
                                    <div class="form-group">
                                        <input type="text" name="PhoneNumber" id="password" class="form-control" placeholder="Phone Number" value="@Model.PhoneNumber">
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                        </label>
                                    </div>
                                </div>

                            </div>
                            <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">Add</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
