@model IEnumerable<AspNetRoles>
@{
    ViewData["Title"] = "Roles";
    Layout = "_TableLayout";
    ViewBag.AddNewLink = "/Roles/Create";
}

<table class="table table-bordered table-striped table-hover dataTable js-exportable">
    @CHtmlHelper.TableHead("th", "Name","NormalizedName", "Actions")
    @CHtmlHelper.TableFoot("th", "Name", "NormalizedName", "Actions")
    <tbody>
        @foreach (var item in Model)
        {
            @Html.TrHtml("td", item.Name,item.NormalizedName ,
             @ButtonHelper.EditSmall("/Roles/Edit/" + item.Id) + "" +
             @ButtonHelper.DeleteSmall("/Roles/Delete/" + item.Id).ToString());
        }
    </tbody>
</table>
