@model Generics.DataModels.AdminModels.ProjectNotes
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Input -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">Project Detail</h2>
                    <form method="post" enctype="multipart/form-data" asp-controller="ProjectNotes" asp-action="Create">
                        <input type="hidden" name="ProjectNotesId" value="@Model.ProjectNotesId" />
                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <select class="form-control show-tick" name="NoteTypeId">
                                        <option value="">-- Please select --</option>
                                        <option value="0">Admin</option>
                                        <option value="1">Manager</option>
                                        <option value="2">Member</option>
                                    </select>
                                </div>
                            </div>
                            @*<div class="col-sm-12">
                                <select asp-for="NoteTypeId" asp-items="ViewBag.NoteTypeId" class="form-control show-tick">
                                </select>
                            </div>*@
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <textarea rows="4" name="Message" class="form-control no-resize" value="@Model.Message" placeholder="Please type what you want..."></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                    </label>
                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">Add</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
