@model Generics.DataModels.AdminModels.Mobile
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Input -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <h2 class="card-inside-title">Customer Detail</h2>
                    <form method="post" enctype="multipart/form-data" asp-controller="Mobile" asp-action="Create">
                        <input type="hidden" name="MobileId" value="@Model.MobileId" />
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <label for="email_address">Name</label>
                                <div class="form-group">
                                    <input type="text" name="MobileName" class="form-control" placeholder="Name" value="@Model.MobileName" />
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                    </label>
                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">Add</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
