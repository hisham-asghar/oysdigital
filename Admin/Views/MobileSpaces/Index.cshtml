@model IEnumerable<Generics.DataModels.AdminModels.MobileSpaces>
@{
    ViewData["Title"] = "Mobile Spaces";
    Layout = "_TableLayout";
    ViewBag.AddNewLink = "/MobileSpaces/Create";
}

<table class="table table-bordered table-striped table-hover dataTable js-exportable">
    @CHtmlHelper.TableHead("th", "Name", "Created", "Status", "Actions")
    @CHtmlHelper.TableFoot("tf", "Name", "Created", "Status", "Actions")
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.OnCreated.ToString("MMM dd, yyyy")</td>
                <td>@item.IsActive.CheckTag()</td>
                <td>
                    @ButtonHelper.EditSmall("/MobileSpaces/Create/" + item.Id)
                    @ButtonHelper.DeleteSmall("/MobileSpaces/Delate/" + item.Id)
                    @ButtonHelper.DetailSmall("/MobileSpaces/Detail/" + item.Id)
                </td>
            </tr>
        }
    </tbody>
</table>

